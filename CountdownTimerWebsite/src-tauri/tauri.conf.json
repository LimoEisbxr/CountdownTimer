{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "CountdownTimer",
    "version": "0.1.0",
    "identifier": "com.CountdownTimer.dev",
    "build": {
        "frontendDist": "../dist/",
        "devUrl": "https://countdowntimer.limonadeundco.duckdns.org",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "app": {
        "windows": [
            {
                "title": "CountdownTimer",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "devtools": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https: wss: ws:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
